#sends message to put the bins out to todo list and notification to phone

alias: General Bin
description: ""
triggers:
  - event: start
    offset: "-0:30:0"
    entity_id: calendar.bin_day
    trigger: calendar
conditions: []
actions:
  - metadata: {}
    data:
      item: put out rubbish bin
    target:
      entity_id: todo.tasks
    action: todo.add_item
  - action: notify.mobile_app_oneplus_a3003
    metadata: {}
    data:
      message: Put the green bin out
      title: Alert
mode: single


# mesage for the recycle bins


alias: put out recycle bin
description: ""
triggers:
  - event: start
    offset: "-0:30:0"
    entity_id: calendar.recycle_bin
    trigger: calendar
conditions: []
actions:
  - metadata: {}
    data:
      item: put out recycle bin
    target:
      entity_id: todo.tasks
    action: todo.add_item
  - action: notify.mobile_app_oneplus_a3003
    data:
      message: The recycle needs to go out
      title: Alert
mode: single
